<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingListActivity">

    <TextView
        android:id="@+id/PaymentListText"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_title"
        android:fontFamily="cursive"
        android:text="Booking List"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <ListView
        android:id="@+id/listViewOrder"
        android:layout_width="325dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/backgroundGreen"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PaymentListText"
        app:layout_constraintVertical_bias="0.075" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewOrder"
        app:layout_constraintVertical_bias="0.2">

        <Button
            android:id="@+id/backButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_rounded"
            android:text="Back"
            android:textColor="@color/black">

        </Button>

        <Button
            android:id="@+id/PrevPaymentButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:background="@drawable/button_rounded"
            android:text="Prev">

        </Button>

        <Button
            android:id="@+id/NextPaymentButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:background="@drawable/button_rounded"
            android:text="Next">

        </Button>


    </LinearLayout>

    <ImageView
        android:id="@+id/leaf"
        android:layout_width="265dp"
        android:layout_height="279dp"

        android:layout_marginEnd="276dp"
        android:alpha="0.8"
        android:rotation="135"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.811"
        app:srcCompat="@drawable/bookinglist_leaf" />

    <ImageView
        android:id="@+id/leaf2"
        android:layout_width="265dp"
        android:layout_height="279dp"

        android:layout_marginStart="276dp"
        android:alpha="0.8"
        android:rotation="225"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449"
        app:srcCompat="@drawable/bookinglist_leaf" />
</androidx.constraintlayout.widget.ConstraintLayout>