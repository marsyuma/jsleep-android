<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef8ec"
    tools:context=".AboutMeActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/AccouuntDetailCard"
        android:layout_width="325dp"
        android:layout_height="270dp"
        android:backgroundTint="#cdeac7"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08">

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AccountDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#acdda3"
                android:fontFamily="cursive"
                android:text="Account Details"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/editTextTextPersonName3"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:ems="10"
                    android:fontFamily="@font/satoshiblack"
                    android:inputType="textPersonName"
                    android:text="Name:"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/NameFillText"
                    android:layout_width="184dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/satoshiblack"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/EmailText"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:ems="10"
                android:fontFamily="@font/satoshiblack"
                android:inputType="textEmailAddress"
                android:text="Email:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EmailFillText"
                android:layout_width="325dp"
                android:layout_height="34dp"
                android:fontFamily="@font/satoshiblack"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/BalanceText"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:ems="10"
                android:fontFamily="@font/satoshiblack"
                android:inputType="textPersonName"
                android:text="Balance:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/BalanceFillText"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:fontFamily="@font/satoshiblack"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/AmountBox"
                    android:layout_width="152dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:fontFamily="@font/satoshiblack"
                    android:hint="Amount"
                    android:inputType="number" />

                <Button
                    android:id="@+id/topUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounded"
                    android:fontFamily="@font/satoshiblack"
                    android:insetLeft="20dp"
                    android:insetRight="20dp"
                    android:text="Top Up"

                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/RegisterButtonCard"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:backgroundTint="#cdeac7"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AccouuntDetailCard"
        app:layout_constraintVertical_bias="0.1">

        <Button
            android:id="@+id/RegisterRenterButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_rounded"
            android:fontFamily="@font/satoshiblack"

            android:insetLeft="0dp"
            android:text="Register Renter"
            android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/RenterRegistrationCard"
        android:layout_width="325dp"
        android:layout_height="250dp"
        android:backgroundTint="#cdeac7"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AccouuntDetailCard"
        app:layout_constraintVertical_bias="0.1">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RenterRegistrationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#acdda3"
                android:fontFamily="cursive"
                android:text="Renter Registration"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/RenterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/satoshiblack"
                android:hint="Name"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/RenterAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/satoshiblack"
                android:hint="Address"
                android:inputType="text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/RenterPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/satoshiblack"
                android:hint="Phone Number"
                android:inputType="number"
                android:minHeight="48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/RegisterRenterConfirmation"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_rounded"
                    android:text="Register"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/RegisterRenterCancel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button_rounded"
                    android:text="Cancel"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/RegisterDetailCard"
        android:layout_width="325dp"
        android:layout_height="300dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#cdeac7"
        android:visibility="visible"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AccouuntDetailCard"
        app:layout_constraintVertical_bias="0.1">

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RenterDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#acdda3"
                android:fontFamily="cursive"
                android:text="Renter Details"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/RenterNameText"
                    android:layout_width="146dp"
                    android:layout_height="36dp"
                    android:ems="10"
                    android:fontFamily="@font/satoshiblack"
                    android:inputType="textPersonName"
                    android:text="Name:"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/RenterNameFillText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/satoshiblack"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/AddressText"
                    android:layout_width="124dp"
                    android:layout_height="36dp"
                    android:ems="10"
                    android:fontFamily="@font/satoshiblack"
                    android:inputType="text"
                    android:text="Address:"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/AddressFillText"
                    android:layout_width="331dp"
                    android:layout_height="34dp"
                    android:fontFamily="@font/satoshiblack"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/PhoneNumberText"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:ems="10"
                    android:fontFamily="@font/satoshiblack"
                    android:inputType="textPersonName"
                    android:text="Phone Number:"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PhoneNumberFillText"
                    android:layout_width="327dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/satoshiblack"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/PaymentList"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_rounded"
                    android:fontFamily="@font/satoshiblack"
                    android:insetLeft="10dp"
                    android:insetRight="10dp"
                    android:text="Booking List"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/backButton"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:background="@drawable/button_rounded"
        android:fontFamily="@font/satoshiblack"
        android:insetLeft="0dp"
        android:text="Back"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AccouuntDetailCard"
        app:layout_constraintVertical_bias="0.9" />


</androidx.constraintlayout.widget.ConstraintLayout>


